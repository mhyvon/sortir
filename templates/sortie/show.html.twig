{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    <h1>Sortie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sortie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.nom }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ sortie.debut ? sortie.debut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ sortie.duree }}</td>
            </tr>
            <tr>
                <th>Date fin inscription</th>
                <td>{{ sortie.clotureInscriptions ? sortie.clotureInscriptions|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>InscriptionsMax</th>
                <td>{{ sortie.inscriptionsMax }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sortie.description }}</td>
            </tr>
            <tr>
                <th>UrlPhoto</th>
                <td>{{ sortie.urlPhoto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('sortie_index') }}">back to list</a>

    {% if app.user %}
        {% if app.user == sortie.organisateur %}
        <a href="{{ path('sortie_edit', {'id': sortie.id}) }}">edit</a>
        {{ include('sortie/_delete_form.html.twig') }}
        {% else %}
            {% if sortie in app.user.inscriptions %}
            <a href="{{ path('sortie_unregister', {'id': sortie.id}) }}">se d√©sinscrire</a>
            {% else %}
            <a href="{{ path('sortie_register', {'id': sortie.id}) }}">s'inscrire</a>
            {% endif %}
        {% endif %}
    {% endif %}
{% endblock %}
