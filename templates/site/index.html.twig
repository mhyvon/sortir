{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block main %}
    <h1>Site index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Gérer</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.nom }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('site_show', {'id': site.id}) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('site_edit', {'id': site.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun site trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('site_new') }}" class="btn btn-primary" >Créer</a>
{% endblock %}
