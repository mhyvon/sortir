{% extends 'base.html.twig' %}

{% block title %}Lieu index{% endblock %}

{% block main %}

    <table class="table">
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Email</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Téléphone</th>
            <th>Gérer</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.username }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>
                    {% if participant.actif %}
                        <a class="btn btn-primary btn-danger" href="{{ path('participant_desactiver', {'id': participant.id}) }}">Désactiver</a>
                    {% else %}
                        <a class="btn btn-primary btn-success" href="{{ path('participant_activer', {'id': participant.id}) }}">Activer</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
