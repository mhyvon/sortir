{% extends 'base.html.twig' %}



{% block main %}

    <div class="container ">
    <h5 class="section-title h1" style="color: #0056b3; text-align: center">Profil de {{ participant.username }}</h5>
        {% if participant.photo %}
            <img src="{{ asset('build/images/' ~ participant.photo) }}" alt="photo de profil" class="tofDeProfil">
        {% endif %}
        {% if not participant.photo %}
            <img src="{{ asset('build/images/imgdft.png') }}" alt="photo de profil" class="tofDeProfil">
        {% endif %}

    <div class="col-md-6">

        <div style= "margin-bottom: 10px" >
            <strong>Prénom : </strong>  {{participant.prenom}}
        </div>
        <div  style= "margin-bottom: 10px">
            <strong>Nom : </strong>  {{participant.nom}}
        </div>
        <div  style= "margin-bottom: 10px">
            <strong>Téléphone : </strong>  {{participant.telephone}}
        </div>
        <div  style= "margin-bottom: 10px">
            <strong>Email : </strong>  {{participant.email}}
        </div>
        <div  style= "margin-bottom: 10px">
            <strong>Ville de rattachement : </strong>   {{participant.site}}
        </div>

        <a href="{{ path('participant_index') }}" class="btn btn-primary" type="button">Retour</a>
    </div>
    </div>



{% endblock %}